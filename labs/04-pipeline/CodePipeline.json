{
    "pipeline": {
        "name": "VLS",
        "roleArn": "arn:aws:iam::051842466066:role/AWSCodePipelineServiceRole",
        "artifactStore": {
            "type": "S3",
            "location": "codepipeline-vls-demo-cicd"
        },
        "stages": [
            {
                "name": "Source",
                "actions": [
                    {
                        "name": "Source",
                        "actionTypeId": {
                            "category": "Source",
                            "owner": "AWS",
                            "provider": "CodeCommit",
                            "version": "1"
                        },
                        "runOrder": 1,
                        "configuration": {
                            "BranchName": "main",
                            "PollForSourceChanges": "false",
                            "RepositoryName": "CICD"
                        },
                        "outputArtifacts": [
                            {
                                "name": "SourceArtifact"
                            }
                        ],
                        "inputArtifacts": [],
                        "region": "eu-west-1"
                    }
                ]
            },
            {
                "name": "Build",
                "actions": [
                    {
                        "name": "Build",
                        "actionTypeId": {
                            "category": "Build",
                            "owner": "AWS",
                            "provider": "CodeBuild",
                            "version": "1"
                        },
                        "runOrder": 1,
                        "configuration": {
                            "ProjectName": "CICD-vls-build"
                        },
                        "inputArtifacts": [
                            {
                                "name": "SourceArtifact"
                            }
                        ],
                        "region": "eu-west-1"
                    }
                ]
            },
            {
                "name": "DeployQA",
                "actions": [
                    {
                        "name": "DeployQA",
                        "actionTypeId": {
                            "category": "Deploy",
                            "owner": "AWS",
                            "provider": "ElasticBeanstalk",
                            "version": "1"
                        },
                        "runOrder": 1,
                        "configuration": {
                            "ApplicationName": "ci-cd-lab",
                            "EnvironmentName": "vls-qa-env"
                        },
                        "outputArtifacts": [],
                        "inputArtifacts": [
                            {
                                "name": "SourceArtifact"
                            }
                        ],
                        "region": "eu-west-1",
                        "namespace": "DeployVariables"
                    }
                ]
            },
            {
                "name": "DeployProduction",
                "actions": [
                    {
                        "name": "PromoteToProd",
                        "actionTypeId": {
                            "category": "Approval",
                            "owner": "AWS",
                            "provider": "Manual",
                            "version": "1"
                        },
                        "runOrder": 1,
                        "configuration": {},
                        "outputArtifacts": [],
                        "inputArtifacts": [],
                        "region": "eu-west-1"
                    },
                    {
                        "name": "DeployProduction",
                        "actionTypeId": {
                            "category": "Deploy",
                            "owner": "AWS",
                            "provider": "ElasticBeanstalk",
                            "version": "1"
                        },
                        "runOrder": 2,
                        "configuration": {
                            "ApplicationName": "ci-cd-lab",
                            "EnvironmentName": "vls-prod-env"
                        },
                        "outputArtifacts": [],
                        "inputArtifacts": [
                            {
                                "name": "SourceArtifact"
                            }
                        ],
                        "region": "eu-west-1"
                    }
                ]
            }
        ],
        "version": 1
    }
}
